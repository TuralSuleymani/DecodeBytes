<Window x:Class="DecodeBytesWPFUI.BankWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DecodeBytesWPFUI"
        mc:Ignorable="d"
        Title="BankWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="100,0,100,0">
            <StackPanel Orientation="Horizontal">
                <Label Content="Card Number:" />
                <TextBox  Width="200" Height="30" Name="txbx_cardnumber" />
                <Button Content="check balance" Name="btn_balance" Click="Button_Click" Margin="100,0,0,0" Width="117"></Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Amount:" />
                <TextBox Width="200" Height="30" Name="txbx_amount" HorizontalAlignment="Right" Margin="200,0,0,0" />
            </StackPanel>
            <Button Content="Add to Balance" Margin="100,0,100,0" Click="Button_Click_1" ></Button>
        </StackPanel>

    </Grid>
</Window>
